<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

  <!-- 로그 기본 경로 -->
  <property name="LOG_DIR" value="logs"/>

  <!-- 공통 패턴 -->
  <property name="PATTERN"
    value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

  <!-- 1) 콘솔 로그 -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- 2) 애플리케이션 일반 로그 -->
  <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/application.log</file>
    <encoder>
      <pattern>${PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!-- 날짜별 디렉토리 + 용량 분할 -->
      <fileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd}/application.%i.log</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- 3) 주문 비즈니스 로그 -->
  <appender name="BIZ_ORDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/business_order.log</file>
    <encoder>
      <pattern>${PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd}/business_order.%i.log</fileNamePattern>
      <maxFileSize>5MB</maxFileSize>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- 4) 상품 비즈니스 로그 -->
  <appender name="BIZ_PRODUCT" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/business_product.log</file>
    <encoder>
      <pattern>${PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd}/business_product.%i.log</fileNamePattern>
      <maxFileSize>5MB</maxFileSize>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- 루트 로거 -->
  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="APP_FILE"/>
  </root>

  <!-- 비즈니스 전용 로거 -->
  <logger name="business.order" level="INFO" additivity="false">
    <appender-ref ref="BIZ_ORDER"/>
  </logger>

  <logger name="business.product" level="INFO" additivity="true">
    <appender-ref ref="BIZ_PRODUCT"/>
  </logger>

</configuration>